// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  ADMIN
  EMPLOYEE
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
  ON_LEAVE
}

enum WorkType {
  ONSITE
  REMOTE
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

// ðŸ‘‡ NEW ENUM
enum LeaveType {
  PAID
  UNPAID
}

// Models
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String   @default("123456")
  employeeId    String   @unique @default("000000") 
  
  firstName     String
  lastName      String
  position      String   @default("Employee")
  hourlyRate    Decimal  @default(0.00)
  
  // âœ… Fixed: Only one 'role' definition here
  role          Role     @default(EMPLOYEE)
  
  isActive      Boolean  @default(true)
  
  // ðŸ‘‡ NEW: Track Paid Leave Credits
  leaveCredits  Int      @default(0)

  // ðŸ‘‡ NEW BIO DATA
  birthday      DateTime?
  photoUrl      String?   
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  attendance    Attendance[] 
  schedules     Schedule[]
  leaveRequests LeaveRequest[]
  scheduleRequests ScheduleChangeRequest[]
}

model Attendance {
  id            String   @id @default(cuid())
  date          DateTime @default(now())
  
  timeIn        DateTime @default(now())
  timeOut       DateTime?
  
  breakStart    DateTime?
  breakEnd      DateTime?
  
  status        AttendanceStatus @default(PRESENT)
  
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  dailyLogs     DailyLog[]
}

model DailyLog {
  id            String      @id @default(cuid())
  content       String?
  createdAt     DateTime    @default(now())

  attendanceId  String
  attendance    Attendance  @relation(fields: [attendanceId], references: [id], onDelete: Cascade)
}

model Schedule {
  id            String   @id @default(cuid())
  dayOfWeek     Int      // 0=Sunday, 1=Monday, etc.
  workType      WorkType @default(ONSITE)
  
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LeaveRequest {
  id            String      @id @default(cuid())
  startDate     DateTime
  endDate       DateTime
  reason        String
  status        LeaveStatus @default(PENDING)
  
  // ðŸ‘‡ NEW: Track if it is Paid or Unpaid
  type          LeaveType   @default(UNPAID) 

  createdAt     DateTime    @default(now())
  
  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ScheduleChangeRequest {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  
  reason           String   
  proposedSchedule Json?  

  status           String   @default("PENDING") 
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}