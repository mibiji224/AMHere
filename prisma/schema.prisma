generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  ADMIN
  EMPLOYEE
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
  ON_LEAVE
}

enum WorkType {
  ONSITE
  REMOTE
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum LeaveType {
  PAID
  UNPAID
}

// Models
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String   @default("123456")
  employeeId    String   @unique
  
  firstName     String
  lastName      String
  position      String   @default("Employee")
  hourlyRate    Decimal  @default(0.00)
  
  role          Role     @default(EMPLOYEE)
  
  isActive      Boolean  @default(true)
  leaveCredits  Int      @default(0)

  // BIO DATA
  birthday      DateTime?
  photoUrl      String?   
  contactNumber String?
  
  // SHIFT DETAILS
  shiftStart    String   @default("08:00")
  shiftEnd      String   @default("17:00")
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  attendance    Attendance[] 
  schedules     Schedule[]
  leaveRequests LeaveRequest[]
  scheduleRequests ScheduleChangeRequest[]
  tasks         Task[] 
  
  // Linked Google Account
  linkedGoogleAccount LinkedGoogleAccount?
}

model Attendance {
  id            String   @id @default(cuid())
  date          DateTime @default(now())
  
  timeIn        DateTime @default(now())
  timeOut       DateTime?
  breakStart    DateTime?
  breakEnd      DateTime?
  status        AttendanceStatus @default(PRESENT)
  
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  dailyLogs     DailyLog[]
}

model DailyLog {
  id            String      @id @default(cuid())
  content       String?
  createdAt     DateTime    @default(now())

  attendanceId  String
  attendance    Attendance  @relation(fields: [attendanceId], references: [id], onDelete: Cascade)
}

model Schedule {
  id            String   @id @default(cuid())
  dayOfWeek     Int
  workType      WorkType @default(ONSITE)
  
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LeaveRequest {
  id            String      @id @default(cuid())
  startDate     DateTime
  endDate       DateTime
  reason        String
  status        LeaveStatus @default(PENDING)
  type          LeaveType   @default(UNPAID) 

  createdAt     DateTime    @default(now())
  
  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id          String   @id @default(cuid())
  title       String
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ScheduleChangeRequest {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  
  reason           String   
  status           String   @default("PENDING") 
  
  proposedSchedule Json?    
  requestedStart   String?  
  requestedEnd     String?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

// Linked Google Account for employees
model LinkedGoogleAccount {
  id            String   @id @default(cuid())

  googleId      String   @unique
  email         String
  name          String?
  picture       String?

  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  linkedAt      DateTime @default(now())
}